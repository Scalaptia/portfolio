---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="flex gap-x-40 h-28 p-8 mb-20 w-full bg-gradient-to-b from-[#ff984e] to-[#FF6D4F] overflow-hidden">
    <!-- Left side header links -->
    <div class="flex items-center justify-end w-1/2">
        <a href="/" class="text-white text-lg font-bold">Home</a>
        <a href="/projects" class="text-white text-lg font-bold ml-8">Projects</a>
    </div>

    <div>
        <h1 class="z-50 bg-[#FCF4DE] w-60 h-60 rounded-full flex items-center justify-center text-[#FF673D] text-4xl font-bold absolute top-10 left-1/2 transform -translate-x-1/2 -translate-y-1/2">{'{ ' + title[0] + ' }'}</h1>
        <h2 class="z-50 text-[#FF673D] text-2xl font-bold absolute top-20 left-1/2 transform -translate-x-1/2 -translate-y-1/2">{title}</h2>
    </div>

    <!-- Right side header links -->

    <div class="flex items-center justify-start w-1/2">
        <a href="/blog" class="text-white text-lg font-bold">Blog</a>
        <a href="/contact" class="text-white text-lg font-bold ml-8">Contact</a>
    </div>


</div>