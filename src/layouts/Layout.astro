---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import BackgroundDecorations from "@/components/BackgroundDecorations.astro";
import Toast from "@/components/Toast";

const { title } = Astro.props;
const { currentLocale } = Astro;
---

<html lang={currentLocale} class="overflow-y-scroll">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- HTML Meta Tags -->
    <title>Fernando Haro</title>
    <meta
      name="description"
      content="Check out my projects and get in touch!"
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://fharo.dev/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Fernando Haro" />
    <meta
      property="og:description"
      content="Check out my projects and get in touch!"
    />
    <meta
      property="og:image"
      content="https://i.ibb.co/JW4yZg6h/Untitled.png"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="fharo.dev" />
    <meta property="twitter:url" content="https://fharo.dev/" />
    <meta name="twitter:title" content="Fernando Haro" />
    <meta
      name="twitter:description"
      content="Check out my projects and get in touch!"
    />
    <meta
      name="twitter:image"
      content="https://i.ibb.co/JW4yZg6h/Untitled.png"
    />

    <!-- Meta Tags Generated via https://www.opengraph.xyz -->

    <!-- Umami Analytics -->
    <script
      defer
      src="https://umami.fharo.dev/script.js"
      data-website-id="73abe834-05b6-4a54-b407-5597a7b70e66"></script>

    <title>Fernando Haro</title>
    <link rel="icon" href="/logo.ico" type="image/x-icon" />
    <link rel="preload" href="/fonts.css" as="style" />
    <link rel="stylesheet" href="/fonts.css" />

    <style>
      :root {
        scrollbar-gutter: stable;
      }

      /* Prevent horizontal overflow */
      html,
      body {
        max-width: 100vw;
        overflow-x: hidden;
      }

      /* Add scroll margin for sections to account for fixed header */
      section[id],
      div[id] {
        scroll-margin-top: 120px; /* Adjust based on header height + padding */
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .animate-fade-in-up {
        animation: fadeInUp 0.8s ease-out forwards;
        opacity: 0;
      }
    </style>
  </head>
  <body
    class="min-h-screen flex flex-col items-center bg-background bg-noise bg-repeat overflow-x-hidden relative pt-16 sm:pt-20 w-full"
  >
    <BackgroundDecorations />
    <Header />
    <br />
    <slot name="content" />
    <Footer />
    <Toast client:load />
  </body>
</html>
