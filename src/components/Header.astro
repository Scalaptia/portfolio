---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";
import LanguagePicker from "./LanguagePicker.astro";

export interface HeaderProps {
  title?: string;
  hideLanguagePicker?: boolean;
}
const { title, hideLanguagePicker } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="relative w-full">
    <div class="flex items-center h-20 mt-2 mb-10 justify-evenly w-full md:justify-center md:gap-28">
        <a href={getRelativeLocaleUrl(lang, '/')} class="text-primary font-ubuntu-mono text-2xl font-bold text-center min-w-[8ch] transition-all hover:scale-110">&lt;{t("nav.home")}&gt;</a>

        <div class="flex flex-col justify-center text-center font-ubuntu-mono">
            <h1 class="text-4xl font-bold text-primary">{'{ ' + t(title)[0] + ' }'}</h1>
            <h2 class="text-xl text-primary">{t(title)}</h2>
        </div>

        <a href={getRelativeLocaleUrl(lang, '/blog')} class="text-primary font-ubuntu-mono text-2xl font-bold text-center min-w-[8ch] transition-all hover:scale-110">&lt;{t("nav.blog")}&gt;</a>
    </div>

    {!hideLanguagePicker && (
        <div class="absolute top-4 right-8 hidden lg:block">
            <LanguagePicker lang={lang} />
        </div>
    )}
</header>