---
import type { LucideIcon } from "lucide-react";

type Props = {
  icon: LucideIcon;
  link: string;
  text: string;
};

const { icon: Icon, link, text }: Props = Astro.props;
---

<a
  href={link}
  class="w-full flex bg-text text-white px-8 py-4 items-center justify-center gap-4 border-2 border-white shadow-[4px_4px_0px_0px_rgba(65,44,71,1)] transition-all duration-150 hover:shadow-[6px_6px_0px_0px_rgba(65,44,71,1)] hover:translate-x-[-2px] hover:translate-y-[-2px] hover:bg-text/90"
  target="blank"
  rel="noopener noreferrer"
>
  <Icon className="min-w-6 min-h-6 flex-shrink-0" />
  <span class="font-black-han-sans text-xl pt-[2px] whitespace-nowrap"
    >{text}</span
  >
</a>
