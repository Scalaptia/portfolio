---
import type { LucideIcon } from 'lucide-react';

type Props = {
    icon: LucideIcon
    link: string
    text: string
}

const { icon: Icon, link, text }: Props = Astro.props
---

<a
    href={link}
    class="w-full flex bg-text text-white rounded-full px-6 py-2 items-center justify-center gap-3 transition-opacity duration-150 hover:opacity-95"
    target="blank"
    rel="noopener noreferrer"
>
    <Icon className="w-6 h-6" />
    <span class="font-black-han-sans text-xl pt-[2px]">{text}</span>
</a>