---
const { url, frontmatter } = Astro.props
const { title, author, description, image = {url: "https://fastly.picsum.photos/id/434/200/300.jpg?hmac=OXYWBdR0QE1mGM2dKi1dktPcY5GckI3ClAgMsyszU-I", alt: "placeholder"}, pubDate, tags } = frontmatter
---

<article class="p-6 bg-white rounded-lg shadow-sm">
    <img class="w-full h-64 rounded-lg object-cover" src={image.url} alt={image.alt} />
    <div class="p-6">
        <h2 class="text-2xl font-bold mb-2">{title}</h2>
        <p class="text-gray-700">{description}</p>
        <div class="mt-4">
            <a href={url} class="text-blue-500 hover:text-blue-800 transition duration-200">Read More</a>
        </div>
        <div class="mt-4">
            <span class="text-gray-600">By {author} on {pubDate}</span>
        </div>
        <div class="mt-4">
            <ul class="flex flex-wrap">
                {tags.map((tag: string) => (
                    <li class="mr-2">
                        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#{tag}</span>
                    </li>
                ))}
            </ul>
        </div>
    </div>
</article>