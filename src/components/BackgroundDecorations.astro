<style>
  /* Solo animaciones sutiles que no interfieran con el parallax */
  .parallax-ultra-slow {
    animation: gentle-pulse 8s ease-in-out infinite;
  }

  .parallax-slow {
    animation: gentle-pulse 6s ease-in-out infinite;
  }

  .parallax-medium {
    animation: gentle-pulse 4s ease-in-out infinite;
  }

  .parallax-fast {
    animation: gentle-pulse 3s ease-in-out infinite;
  }
  @keyframes gentle-pulse {
    0%,
    100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.7;
    }
  }

  /* Rotaciones personalizadas */
  .rotate-15 {
    transform: rotate(15deg);
  }
  .rotate-30 {
    transform: rotate(30deg);
  }
  .rotate-60 {
    transform: rotate(60deg);
  }
  .rotate-75 {
    transform: rotate(75deg);
  }
  .-rotate-60 {
    transform: rotate(-60deg);
  }
  .-rotate-75 {
    transform: rotate(-75deg);
  }
  .-rotate-15 {
    transform: rotate(-15deg);
  }

  /* Preparaci칩n para parallax */
  @media (prefers-reduced-motion: no-preference) {
    .parallax-ultra-slow,
    .parallax-slow,
    .parallax-medium,
    .parallax-fast {
      transform: translateZ(0);
      will-change: transform;
    }
  }
  /* Responsivo - menos elementos en m칩vil */
  @media (max-width: 768px) {
    .parallax-ultra-slow > div:nth-child(n + 5) {
      display: none;
    }

    .parallax-slow > div:nth-child(n + 5) {
      display: none;
    }

    .parallax-medium > div:nth-child(n + 5) {
      display: none;
    }

    .parallax-fast > div:nth-child(n + 5) {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .parallax-ultra-slow > div:nth-child(n + 3) {
      display: none;
    }

    .parallax-slow > div:nth-child(n + 3) {
      display: none;
    }

