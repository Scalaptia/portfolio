    }
  }
</style>

<script>
  // Efecto parallax real basado en scroll
  document.addEventListener("DOMContentLoaded", () => {
    if (window.matchMedia("(prefers-reduced-motion: no-preference)").matches) {
      const parallaxElements = {
        ultraSlow: document.querySelectorAll(".parallax-ultra-slow"),
        slow: document.querySelectorAll(".parallax-slow"),
        medium: document.querySelectorAll(".parallax-medium"),
        fast: document.querySelectorAll(".parallax-fast"),
      };

      let ticking = false;
      function updateParallax() {
        const scrolled = window.pageYOffset;

        // Diferentes velocidades para cada grupo de elementos
        parallaxElements.ultraSlow.forEach((element) => {
          const yPos = -(scrolled * 0.1); // Muy lento
          const currentTransform = (
            element as HTMLElement
          ).style.transform.replace(/translateY\([^)]*\)/g, "");
          (element as HTMLElement).style.transform =
            `${currentTransform} translateY(${yPos}px)`.trim();
        });

        parallaxElements.slow.forEach((element) => {
          const yPos = -(scrolled * 0.2); // Lento
          const currentTransform = (
            element as HTMLElement
          ).style.transform.replace(/translateY\([^)]*\)/g, "");
          (element as HTMLElement).style.transform =
            `${currentTransform} translateY(${yPos}px)`.trim();
        });

        parallaxElements.medium.forEach((element) => {
          const yPos = -(scrolled * 0.3); // Medio
          const currentTransform = (
            element as HTMLElement
          ).style.transform.replace(/translateY\([^)]*\)/g, "");
          (element as HTMLElement).style.transform =
            `${currentTransform} translateY(${yPos}px)`.trim();
        });

        parallaxElements.fast.forEach((element) => {
          const yPos = -(scrolled * 0.4); // R치pido
          const currentTransform = (
            element as HTMLElement
          ).style.transform.replace(/translateY\([^)]*\)/g, "");
          (element as HTMLElement).style.transform =
            `${currentTransform} translateY(${yPos}px)`.trim();
        });

        ticking = false;
      }

      function requestTick() {
        if (!ticking) {
          requestAnimationFrame(updateParallax);
          ticking = true;
        }
      }

      window.addEventListener("scroll", requestTick, { passive: true });
    }
  });
</script>
